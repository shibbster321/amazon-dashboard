<div class="container">
  <h1 class="text-center my-3">User Permissions</h1>
  <table class="table my-2">
    <thead>
      <tr>
        <th class="text-center" scope="col">#</th>
        <th class="" scope="col">Name</th>
        <th class="" scope="col">Email</th>
        <th scope="col"> Status</th>
        <th class="text-center" scope="col"> Edit</th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% @users.each do |user| %>
        <tr>
        <% i += 1 %>
          <th class="text-center" scope="row"><%= i %></th>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td class="font-italic"> <%= user.status %></td>
          <td><div class="d-flex justify-content-center">
              <%= link_to "edit, ", edit_permission_path(user.id), class: "text-small pr-2" %>
              <%= link_to 'delete',permission_path({:id => user.id}),method: :delete, data: {confirm: "Are you sure you want to delete this??"} %>
            </div></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
