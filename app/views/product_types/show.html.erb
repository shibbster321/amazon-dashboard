<div class="container">
  <h1>Child Products</h1>
  <p>Parent: <%=@product_type.title %></p>
  <%= link_to '<<Back', product_types_path, class: "btn-back" %>
  <table class="table my-3">
    <thead>
      <tr>
        <th class="text-center" scope="col">#</th>
        <th class="text-center" scope="col">Image</th>
        <th scope="col">Title</th>
        <th scope="col">ASIN</th>
        <th scope="col">SKU</th>
        <th scope="col">Color/Size</th>
        <th scope="col"> edit</th>
        <th scope="col"> Change parent</th>

      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% @products.each do |item| %>
      <tr>
        <% i += 1 %>
          <th class="text-center" scope="row"><%= i %></th>
          <td class="text-center">
            <% if item.photo.attached? %>
              <%= cl_image_tag item.photo.key, class: "icon-square" %>
            <% else %>
              <%= image_tag "no_image_avail.jpg", class: "icon-square" %>
            <% end %>
          </td>
          <td><%= item.title %></td>
          <td><%= item.asin %></td>
          <td><%= item.sku %></td>
          <td><%= item.color_size %></td>
          <td><%= link_to "edit", edit_product_type_product_path(@product_type, {:id => item.id}), class: "btn-edit" %> / <%= link_to 'delete',product_type_product_path(@product_type, {:id => item.id}),method: :delete, data: {confirm: "Are you sure you want to delete this??"} %></td>
          <td><%= link_to "Re-assign parent", product_type_product_edit_parent_path(@product_type.id, {:product_id => item.id}), class: "btn btn-secondary", data: {confirm: "Are you sure you want to reassign the parent product??"} %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add Another Child", new_product_type_product_path(@product_type), class: "btn btn-secondary" %>
</div>
