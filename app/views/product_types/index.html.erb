<div class="container">
  <h1>Parent Products</h1>
  <%= link_to "Add New", new_product_type_path, class: "btn btn-secondary" %>
  <table class="table my-2">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Image</th>
      <th scope="col">Title</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% i = 0 %>
      <% @product_types.each do |item| %>
      <% i += 1 %>
        <th scope="row">i</th>
        <td>image</td>
        <td><%= item.title %></td>
      <% end %>
    </tr>
  </tbody>
</table>

</div>
